<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Account Management App" Height="850" Width="1200"
    Background="#FF1E1E1E" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Title -->
        <Label Content="Account Management App" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
               FontSize="24" FontWeight="Bold" Foreground="White"/>

        <!-- Menu Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <Button x:Name="RemoteAccessButton" Content="Remote Access" Width="150" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
            <Button x:Name="LanExtensionButton" Content="LAN Extension" Width="150" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
            <Button x:Name="GroupManagementButton" Content="Group Management" Width="180" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
            <Button x:Name="MFAUpdateButton" Content="MFA Update" Width="150" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
            <Button x:Name="GroupExtractionButton" Content="Group Extraction" Width="180" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
            <Button x:Name="CreateUserButton" Content="Create User" Width="150" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
            <Button x:Name="AdResetB2BButton" Content="AD Reset &amp; B2B" Width="150" Height="40" Margin="10,0,10,0"
                    FontSize="16" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- ===== REMOTE ACCESS PANEL ===== -->
        <StackPanel x:Name="RemoteAccessPanel" Visibility="Collapsed" Margin="50,150,50,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Computer Name:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="ComputerNameTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="User LAN ID:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="UserLANIDTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Select Group:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <ComboBox x:Name="GroupSelectionComboBox" Height="30" FontSize="14" Background="White"
                      Foreground="Black" BorderBrush="#FF555555">
                <ComboBoxItem Content="1" IsSelected="True" Foreground="Black"/>
                <ComboBoxItem Content="2" Foreground="Black"/>
                <ComboBoxItem Content="3" Foreground="Black"/>
            </ComboBox>
            
            <Button x:Name="RemoteAccessSubmitButton" Content="Submit" Width="100" Height="35" 
                    Margin="0,20,0,0" FontSize="14" FontWeight="Bold" Background="#FF0078D7" 
                    Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
        </StackPanel>

        <!-- ===== LAN EXTENSION PANEL ===== -->
        <StackPanel x:Name="LanExtensionPanel" Visibility="Collapsed" Margin="50,150,50,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="User LAN ID:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="LanExtensionUserLANIDTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Extend Date (MM/DD/YYYY):" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="LanExtensionDateTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Ticket Number:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="LanExtensionTicketNumberTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Initials:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="LanExtensionInitialsTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <Button x:Name="LanExtensionSubmitButton" Content="Submit" Width="100" Height="35" 
                    Margin="0,20,0,0" FontSize="14" FontWeight="Bold" Background="#FF0078D7" 
                    Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
        </StackPanel>

        <!-- ===== GROUP MANAGEMENT PANEL ===== -->
        <StackPanel x:Name="GroupManagementPanel" Visibility="Collapsed" Margin="50,150,50,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="User LAN ID(s) (comma-separated):" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="GroupManagementUserLANIDTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Group Name(s) (comma-separated):" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="GroupManagementGroupNamesTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Action:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <ComboBox x:Name="GroupManagementActionComboBox" Height="30" FontSize="14" Background="White"
                      Foreground="Black" BorderBrush="#FF555555">
                <ComboBoxItem Content="Add" IsSelected="True" Foreground="Black"/>
                <ComboBoxItem Content="Remove" Foreground="Black"/>
            </ComboBox>
            
            <Button x:Name="GroupManagementSubmitButton" Content="Submit" Width="100" Height="35" 
                    Margin="0,20,0,0" FontSize="14" FontWeight="Bold" Background="#FF0078D7" 
                    Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
        </StackPanel>

        <!-- ===== MFA UPDATE PANEL ===== -->
        <StackPanel x:Name="MFAUpdatePanel" Visibility="Collapsed" Margin="50,150,50,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="User Email:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="MFAUpdateUserEmailTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Phone Number:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="MFAUpdatePhoneNumberTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Method Type:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <ComboBox x:Name="MFAUpdateMethodTypeComboBox" Height="30" FontSize="14" Background="White"
                      Foreground="Black" BorderBrush="#FF555555">
                <ComboBoxItem Content="Mobile" IsSelected="True" Foreground="Black"/>
                <ComboBoxItem Content="Alternate Mobile" Foreground="Black"/>
                <ComboBoxItem Content="Office" Foreground="Black"/>
            </ComboBox>
            
            <Button x:Name="MFAUpdateSubmitButton" Content="Submit" Width="100" Height="35" 
                    Margin="0,20,0,0" FontSize="14" FontWeight="Bold" Background="#FF0078D7" 
                    Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
        </StackPanel>

        <!-- ===== GROUP EXTRACTION PANEL ===== -->
        <StackPanel x:Name="GroupExtractionPanel" Visibility="Collapsed" Margin="50,150,50,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Group Name:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="GroupNameTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="ExtractButton" Content="Extract Group" Width="120" Height="35" 
                        FontSize="14" FontWeight="Bold" Background="#FF0078D7" 
                        Foreground="White" BorderBrush="Transparent" Cursor="Hand" Margin="0,0,10,0"/>
                <Button x:Name="DownloadButton" Content="Download Excel" Width="120" Height="35" 
                        FontSize="14" FontWeight="Bold" Background="#FF28A745" 
                        Foreground="White" BorderBrush="Transparent" Cursor="Hand" IsEnabled="False"/>
            </StackPanel>
            
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,20,0,0" Background="#FF333333"
                         Foreground="#FF0078D7"/>
            <Label x:Name="StatusLabel" Content="Ready" Foreground="White" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- ===== CREATE USER PANEL ===== -->
        <ScrollViewer x:Name="CreateUserPanel" Visibility="Collapsed" Margin="50,150,50,20" 
                      VerticalScrollBarVisibility="Auto" MaxHeight="400">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="First Name:" Foreground="White" FontSize="14"/>
                    <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
                </StackPanel>
                <TextBox x:Name="CreateUserFirstNameTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Last Name:" Foreground="White" FontSize="14"/>
                    <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
                </StackPanel>
                <TextBox x:Name="CreateUserLastNameTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <Label Content="Title:" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserTitleTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <Label Content="Department:" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserDepartmentTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <Label Content="Phone:" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserPhoneTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <Label Content="Email:" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserEmailTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <Label Content="Description:" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserDescriptionTextBox" Height="60" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White" TextWrapping="Wrap" AcceptsReturn="True"/>
                
                <Label Content="OU (optional):" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <ComboBox x:Name="CreateUserOUComboBox" Height="30" FontSize="14" Background="White"
                        Foreground="Black" BorderBrush="#FF555555">
                <ComboBoxItem Content="(Default)" IsSelected="True" Foreground="Black"/>
                <ComboBoxItem Content="ACCIS" Foreground="Black"/>
                <ComboBoxItem Content="MCS" Foreground="Black"/>
                <ComboBoxItem Content="PACTWEB" Foreground="Black"/>
                <ComboBoxItem Content="VSP-Web | STARS" Foreground="Black"/>
                </ComboBox>
                
                <Label Content="LAN ID (optional):" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserLanIDTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Organization:" Foreground="White" FontSize="14"/>
                    <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
                </StackPanel>
                <ComboBox x:Name="CreateUserOrgComboBox" Height="30" FontSize="14" Background="White"
                          Foreground="Black" BorderBrush="#FF555555">
                    <ComboBoxItem Content="HRA" Foreground="Black"/>
                    <ComboBoxItem Content="DSS" Foreground="Black"/>
                    <ComboBoxItem Content="Azure" Foreground="Black"/>
                </ComboBox>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Account Type:" Foreground="White" FontSize="14"/>
                    <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
                </StackPanel>
                <ComboBox x:Name="CreateUserTypeComboBox" Height="30" FontSize="14" Background="White"
                          Foreground="Black" BorderBrush="#FF555555">
                    <ComboBoxItem Content="Employee (E)" IsSelected="True" Foreground="Black"/>
                    <ComboBoxItem Content="Temp (T)" Foreground="Black"/>
                    <ComboBoxItem Content="B2B (B)" Foreground="Black"/>
                </ComboBox>
                
                <Label x:Name="CreateUserExpiryLabel" Content="Expiry (months):" Foreground="White" FontSize="14" 
                       Margin="0,10,0,0" Visibility="Collapsed"/>
                <ComboBox x:Name="CreateUserExpiryComboBox" Height="30" FontSize="14" Background="White"
                          Foreground="Black" BorderBrush="#FF555555" Visibility="Collapsed">
                    <ComboBoxItem Content="1" Foreground="Black"/>
                    <ComboBoxItem Content="3" Foreground="Black"/>
                    <ComboBoxItem Content="6" IsSelected="True" Foreground="Black"/>
                    <ComboBoxItem Content="12" Foreground="Black"/>
                </ComboBox>
                
                <Label Content="Additional Groups (comma-separated):" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                <TextBox x:Name="CreateUserGroupsTextBox" Height="30" FontSize="14" Background="#FF333333"
                         Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Button x:Name="CreateUserLoadCSVButton" Content="Load CSV" Width="100" Height="35" 
                            FontSize="14" FontWeight="Bold" Background="#FF6C757D" 
                            Foreground="White" BorderBrush="Transparent" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button x:Name="CreateUserClearButton" Content="Clear Form" Width="100" Height="35" 
                            FontSize="14" FontWeight="Bold" Background="#FF6C757D" 
                            Foreground="White" BorderBrush="Transparent" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button x:Name="CreateUserSubmitButton" Content="Create User" Width="120" Height="35" 
                            FontSize="14" FontWeight="Bold" Background="#FF0078D7" 
                            Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- ===== AD RESET & B2B PANEL ===== -->
        <StackPanel x:Name="AdResetB2BPanel" Visibility="Collapsed" Margin="50,150,50,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="LAN ID or UPN:" Foreground="White" FontSize="14"/>
                <Label Content="*" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="2,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="AdResetB2BUserTextBox" Height="30" FontSize="14" Background="#FF333333"
                     Foreground="White" BorderBrush="#FF555555" CaretBrush="White"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="AdResetPasswordButton" Content="Reset Password" Width="120" Height="30" Margin="10,0"
                        FontSize="14" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                        Cursor="Hand"/>
                <Button x:Name="AdResetGuestButton" Content="Invite Guest" Width="120" Height="30" Margin="10,0"
                        FontSize="14" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                        Cursor="Hand"/>
                <Button x:Name="AdResetMemberButton" Content="Invite Member" Width="120" Height="30" Margin="10,0"
                        FontSize="14" FontWeight="Bold" Background="#FF0078D7" Foreground="White" BorderBrush="Transparent"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!-- Output TextBox -->
        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="50,0,50,20" 
                 Height="150" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" 
                 FontSize="14" Background="#FF333333" Foreground="White" BorderBrush="#FF555555"/>
    </Grid>
</Window>